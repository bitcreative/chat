<div class="row">
    <div class="col-sm-6 col-sm-offset-3">
        <form class="form-horizontal" {{action "submitForm" on="submit"}}>
            <div class="col-sm-offset-4 col-sm-8">
                <h1>
                    <small>Register</small>
                </h1>
            </div>

            {{#if registrationError}}
                <div class="form-group">
                    <div class="col-sm-offset-4 col-sm-8">
                        <div class="alert alert-danger" role="alert">
                            {{{registrationError}}}
                        </div>
                    </div>
                </div>
            {{/if}}

            <div class="form-group">
                <label class="col-sm-4 control-label">Organization Name</label>

                <div class="col-sm-8">
                    {{input type="text" classNames="form-control" placeholder="Acme Inc." value=organization.name}}
                </div>
            </div>

            <div class="form-group">
                <label class="col-sm-4 control-label">Email</label>

                <div class="col-sm-8">
                    {{input type="email" classNames="form-control" placeholder="user@email.com" value=user.email}}
                </div>
            </div>

            <div {{bind-attr class=":form-group passwordWarning:has-warning passwordWarning:has-feedback"}}>
                <label for="password" class="col-sm-4 control-label">Password</label>

                <div class="col-sm-8">
                    {{input type="password" value=user.password placeholder="password" classNames="form-control" id="password"}}
                    {{#if passwordWarning}}
                        <span class="glyphicon glyphicon-warning-sign form-control-feedback"></span>
                    {{/if}}
                </div>
            </div>

            <div {{bind-attr class=":form-group passwordWarning:has-warning passwordWarning:has-feedback"}}>
                <div class="col-sm-offset-4 col-sm-8">
                    {{input type="password" classNames="form-control" value=user.passwordRepeat placeholder="repeat password"}}
                    {{#if passwordWarning}}
                        <span class="glyphicon glyphicon-warning-sign form-control-feedback"></span>
                    {{/if}}
                </div>
            </div>

            <div class="form-group">
                <div class="col-sm-8 col-sm-offset-4">
                    <button class="btn btn-primary"
                            type="submit" {{bind-attr disabled=buttonDisabled}}>
                        Sign Up
                    </button>
                </div>
            </div>
        </form>
    </div>
</div>
