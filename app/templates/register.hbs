<div class="row">
    <div class="col-sm-6 col-sm-offset-3">
        <h1>
            <small>Register</small>
        </h1>

        <form class="form-horizontal" {{action "register" on="submit"}}>
            <div class="form-group">
                <div class="col-sm-4">
                    <label>Organization Name</label>
                </div>

                <div class="col-sm-8">
                    {{input type="text" classNames="form-control" placeholder="Acme Inc." value=organization.name}}
                </div>
            </div>

            <div class="form-group">
                <div class="col-sm-4">
                    <label>Email</label>
                </div>

                <div class="col-sm-8">
                    {{input type="email" classNames="form-control" placeholder="user@email.com" value=user.email}}
                </div>
            </div>

            <div class="form-group">
                <div class="col-sm-4">
                    <label>Password</label>
                </div>

                <div class="col-sm-8">
                    {{input type="password" classNames="form-control" value=user.password}}
                </div>
            </div>

            <div class="form-group">
                <div class="col-sm-4">
                    <label>Repeat password</label>
                </div>

                <div class="col-sm-8">
                    {{input type="password" classNames="form-control" value=user.passwordRepeat}}
                </div>
            </div>

            <div class="form-group">
                <div class="col-sm-8 col-sm-offset-4">
                    <button class="btn btn-primary" type="submit" {{bind-attr disabled=buttonDisabled}} {{action "register"}}>
                        Sign Up
                    </button>
                </div>
            </div>
        </form>

    </div>
</div>
