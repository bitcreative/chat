<div class="login-page row">
    <div class="col-lg-offset-3 col-lg-6">
        <form class="form-horizontal" role="form" {{action "login" on="submit"}}>
            <div class="col-sm-offset-2 col-sm-10">
                <h3>Login page</h3>
            </div>
            <div class="form-group">
                <label for="userEmail" class="col-sm-2 control-label">Email</label>

                <div class="col-sm-10">
                    {{input type="email" class="form-control" id="userEmail" placeholder="email" value=email}}
                </div>
            </div>
            <div class="form-group">
                <label for="password" class="col-sm-2 control-label">Password</label>

                <div class="col-sm-10">
                    {{input type="password" class="form-control" id="password" placeholder="password" value=password}}
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <button type="submit" class="btn btn-primary">Sign in</button>
                </div>
            </div>
        </form>
    </div>
</div>
